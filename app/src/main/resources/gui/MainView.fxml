   <children>
      <ChoiceBox fx:id="stateChoiceBox" prefWidth="150.0" />
      <HBox prefWidth="790.0" spacing="15.0">
         <children>
            <TextField id="searchbar" prefHeight="26.0" prefWidth="744.0" />
            <Button id="conf" mnemonicParsing="false" prefWidth="93.0" styleClass="btn" text="*" />
            <Button mnemonicParsing="false" prefWidth="186.0" styleClass="btn" text="Add Game" />
         </children>
      </HBox>
      <HBox prefHeight="10.0" prefWidth="1120.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="147.0" styleClass="btn" text="Order By">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/plus.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <ListView fx:id="gameListView" prefHeight="200.0" prefWidth="200.0" />
      <AnchorPane prefHeight="50.0" prefWidth="105.0" style="-fx-background-color: #fff;">
         <children>
            <ImageView fitHeight="32.0" fitWidth="32.0" layoutX="14.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/game.png" />
               </image>
            </ImageView>
            <Label layoutX="61.0" layoutY="11.0" text="Name of the item">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets left="80.0" right="80.0" top="20.0" />
   </padding>
</VBox>
